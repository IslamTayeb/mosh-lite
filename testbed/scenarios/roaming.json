{
  "scenario_name": "Network Roaming",
  "description": "Simulates roaming between wifi, cellular_1, and cellular_2",
  "created_by": "netem_testbed",
  "seed": 42,
  "notes": "Tests IP switching by making only one network active at a time",
  "steps": [
    {
      "duration_s": 10,
      "delay_ms": 20,
      "jitter_ms": 5,
      "loss_pct": 0,
      "rate_kbit": 10000,
      "active_interface": "wifi",
      "description": "WiFi: low latency, high bandwidth"
    },
    {
      "duration_s": 10,
      "delay_ms": 50,
      "jitter_ms": 10,
      "loss_pct": 1,
      "rate_kbit": 5000,
      "active_interface": "cellular_1",
      "description": "Cellular 1: medium latency, medium bandwidth"
    },
    {
      "duration_s": 10,
      "delay_ms": 80,
      "jitter_ms": 20,
      "loss_pct": 2,
      "rate_kbit": 2000,
      "active_interface": "cellular_2",
      "description": "Cellular 2: higher latency, lower bandwidth"
    },
    {
      "duration_s": 10,
      "delay_ms": 30,
      "jitter_ms": 5,
      "loss_pct": 0,
      "rate_kbit": 8000,
      "active_interface": "wifi",
      "description": "Back to WiFi: low latency, high bandwidth"
    }
  ]
}
